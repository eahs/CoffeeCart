<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CoffeeCart.Views.AddOnsPage" BackgroundColor="LightGray">

    <AbsoluteLayout>
             <Label HorizontalOptions="CenterAndExpand"
                    AbsoluteLayout.LayoutBounds="1, 0.07, .9, 100"
                    AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional">
                        <Label.FormattedText>
                            <FormattedString>
                                <FormattedString.Spans>
                                    <Span Text="Select Add Ons" FontAttributes="Bold" FontSize="37"/>
                                </FormattedString.Spans>
                            </FormattedString>
                        </Label.FormattedText>
             </Label>
        <Button Text="Next" FontSize="15"
                    AbsoluteLayout.LayoutBounds="0.9, 0.9, 0.15, 0.06"
                    AbsoluteLayout.LayoutFlags="PositionProportional, SizeProportional"
                    FontAttributes="Bold"
                    Clicked="NextButtonToQuan"
                    BackgroundColor="IndianRed"
                    TextColor="White"
                />
             
    </AbsoluteLayout>

</ContentPage>
