<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CoffeeCart.Views.AddPage" BackgroundColor="LightGray">
    
        <AbsoluteLayout>
          
                <Label FontSize="22"
                    HorizontalOptions="CenterAndExpand"
                    AbsoluteLayout.LayoutBounds= "1.0, 0.0, 1.0, 100"
                    AbsoluteLayout.LayoutFlags= "PositionProportional,WidthProportional">
                    <Label.FormattedText>
                            <FormattedString>
                                <FormattedString.Spans>
                                <Span Text="Add" FontAttributes="Bold" FontSize="35" />
                            </FormattedString.Spans> 
                        </FormattedString>
                    </Label.FormattedText>
                    </Label>


           
                
                <Button Text="Add" FontSize="30"
                        AbsoluteLayout.LayoutBounds="0.5, 0.7, 0.5, 0.1"
                        AbsoluteLayout.LayoutFlags="PositionProportional,SizeProportional"
                        BackgroundColor="IndianRed"
                        FontAttributes="Bold"
                        Clicked="_buttonClicked"
                        TextColor="White" />
               
 </AbsoluteLayout>



    
</ContentPage>
