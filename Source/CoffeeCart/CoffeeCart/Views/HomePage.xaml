<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CoffeeCart.Views.HomePage">
    <ContentPage.Content>
        <Label Text="Welcome to the home page." HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />

    </ContentPage.Content>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

    <StackLayout Orientation="Vertical" Padding = "120,50,55,0" Spacing="10">
         <Label FontSize="22">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span Text="Ready to Order?" FontAttributes="Bold" FontSize="22"/>
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
    <Button Margin="0,300,50,0" Text="Order" FontSize="40" FontAttributes="Bold"
                        Command="{Binding OpenWebCommand}"
                        BackgroundColor="Red"
                        TextColor="White" />
        </StackLayout>
        </Grid>
</ContentPage> 