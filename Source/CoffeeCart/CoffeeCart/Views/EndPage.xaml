<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CoffeeCart.Views.EndPage">
    <ContentPage.Content>
        <Label Text="Your order has been sent!" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
    </ContentPage.Content>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
       
       
            <StackLayout Orientation="Vertical" Padding="10,50,10,10" Spacing="10">
                <Label FontSize="22">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span Text="Your order has been sent!" FontAttributes="Bold" FontSize="50" />
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                
               
                <Button Margin="0,500,0,50" Text="Main Menu"
                        Command="{Binding OpenWebCommand}"
                        BackgroundColor="IndianRed"
                        TextColor="White" />
            </StackLayout>
       
    </Grid>

</ContentPage>
