<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CoffeeCart.Views.SugarPage">
    <ContentPage.Content>
        <Label Text="Amount of Sugar" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
    </ContentPage.Content>
     <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


         <StackLayout Orientation="Vertical" Padding = "20,50,10,10" Spacing="10">
         <Label FontSize="22">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span Text="Sugar" FontAttributes="Bold" FontSize="35"/>
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
         </StackLayout>
         
         <StackLayout Orientation="Vertical" Padding = "20,95,20,10" Spacing="10">
         <Label FontSize="12">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span Text="Input the amount of sugar" FontSize="14"/>
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
         </StackLayout>

         <StackLayout Orientation="Vertical" Padding = "20,155,20,10" Spacing="10">
         <Label FontSize="12">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span Text="Sugar:" FontSize="20"/>
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
         </StackLayout>
         <Entry Placeholder="Enter:" Margin="20,190,210,120"/>

         <StackLayout Orientation="Vertical" Padding = "20,265,20,20" Spacing="10">
         <Label FontSize="12">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span Text="Splenda:" FontSize="20"/>
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
         </StackLayout>
         <Entry Placeholder="Enter:" Margin="20,295,210,20"/>






         </Grid>
</ContentPage>
