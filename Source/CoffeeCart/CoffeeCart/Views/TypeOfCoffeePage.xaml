           <ListView
                x:Name="ProductsListView"
                SeparatorColor="LightGray"
                BackgroundColor="LightGray"
                AbsoluteLayout.LayoutBounds="0.5, 1, 0.8, 0.8"
                AbsoluteLayout.LayoutFlags="PositionProportional,SizeProportional"
                ItemsSource="{Binding BeverageProducts}"
                VerticalOptions="FillAndExpand"
                HasUnevenRows="true"
                RefreshCommand="{Binding LoadItemsCommand}"
                IsPullToRefreshEnabled="true"
                ItemSelected="ItemSelected"
                IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                CachingStrategy="RecycleElement">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>

                            <Frame Padding="10,10,10,10" BackgroundColor="IndianRed" CornerRadius="60">

                                <Label Text="{Binding Name}" FontSize="30"
                                    Margin="10,20,10,20"
                                    FontAttributes="Bold"
                                    HorizontalOptions="Center"
                                    BackgroundColor="IndianRed"
                                    TextColor="White" />

                            </Frame>
                                <!--Clicked="_buttonClicked"-->


                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
   </AbsoluteLayout>

