<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CoffeeCart.Views.TypeOfCoffeePage">
    <ContentPage.Content>
        <Label Text="What type of coffee would you like to order?" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand"/>
    </ContentPage.Content>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
       
       
            <StackLayout Orientation="Vertical" Padding="10,50,10,10" Spacing="10">
                <Label FontSize="22">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span Text="What type of coffee would you like to order?" FontAttributes="Bold" FontSize="22" />
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                
               
                <Button Margin="0,45,0,0" Text="Regular"
                        Command="{Binding OpenWebCommand}"
                        BackgroundColor="DarkSlateBlue"
                        TextColor="White" />
                <Button Margin="0,10,0,0" Text="Decaf"
                        Command="{Binding OpenWebCommand}"
                        BackgroundColor="DarkSlateBlue"
                        TextColor="White" />
                <Button Margin="0,10,0,0" Text="Tea"
                        Command="{Binding OpenWebCommand}"
                        BackgroundColor="DarkSlateBlue"
                        TextColor="White" />
            </StackLayout>
       
    </Grid>

    
</ContentPage>

 
